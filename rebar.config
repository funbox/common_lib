%% -*- mode: erlang -*-

{erl_opts, [warnings_as_errors, debug_info]}.
{plugins, [rebar3_hex]}.
{xref_checks, [undefined_function_calls]}.

%% Common Test
{ct_dir, "test"}.
{ct_log_dir, "test/logs"}.
{ct_use_short_names, true}.
{ct_extra_params, "-spec test/conf/test.spec"}.

%% Cover
{cover_enabled, true}.
